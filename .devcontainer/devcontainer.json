{
  "name": ".NET 9 Codespace",
  "image": "mcr.microsoft.com/devcontainers/dotnet:9.0-bookworm",

  // Features add extra tools; dotnet is usually already there, but this is an example
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "9.0"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",          // C# Dev Kit / C# tools
        "ms-dotnettools.csdevkit",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "postCreateCommand": "dotnet restore",

  "forwardPorts": [5000, 5001],

  "portsAttributes": {
    "5000": { "label": "HTTP", "onAutoForward": "openBrowser" },
    "5001": { "label": "HTTPS", "onAutoForward": "openBrowser" }
  }
}
